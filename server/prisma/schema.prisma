generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Application {
  id          Int      @id @default(autoincrement())
  company     String
  role        String
  status      String   @default("applied")
  dateApplied DateTime @default(now()) // âœ… fixed typo & added default
  link        String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
